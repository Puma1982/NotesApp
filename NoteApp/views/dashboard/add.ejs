<div class="container-fluid container-fluid-custom pb-5 mb-5">
  <div class="row mb-4">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
          <li class="breadcrumb-item active">Create a Note</li>
        </ol>
      </nav>

      <div class="col d-flex justify-content-between align-items-center">
        <h1 class="h3">What is on your mind?</h1>
      </div>
    </div>
  </div>

  <form action="/dashboard/add" method="POST" class="position-relativ">
    <div
      class="form-group mb-4 position-absolut"
      style="left: -1px; top: 1px; right: 1px"
    >
      <input
        class="form-control fw-bold border-0 fs-4"
        id="title"
        type="text"
        name="title"
        placeholder="Title"
        required
      />
    </div>

    <div class="form-group mb-4">
      <textarea
        name="body"
        id="body"
        rows="12"
        class="form-control pt-5 fs-4"
        placeholder="Take a note..."
        required
      >
      </textarea>
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-primary btn-lg">Store this</button>
    </div>
  </form>
</div>
